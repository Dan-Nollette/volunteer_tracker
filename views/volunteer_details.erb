<h1><%= @volunteer.name%> Details</h1>

<h3><%= @volunteer.name%> is a volunteer on <%= @project.title%></h3>

<form action="/volunteers/<%=@volunteer.id%>" method="post">
  <input name="_method" type="hidden" value="patch">
  <div class="form-group">
    Enter a new name to update this volunteer:<br>
    <label for="name">Name:</label>
    <input id="name" name="name" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Update Volunteer</button>
</form>
<form action="/projects/<%=@project.id()%>" method="post">
  <input name="_method" type="hidden" value="delete">
  <input type="hidden" name="delete_id" value="<%= @volunteer.id%>">

  <button type="submit" class="btn">Delete volunteer</button>
</form>
